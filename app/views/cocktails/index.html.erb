<div class="text-center p-5">
  <h1>Cocktails </h1>
  <%= link_to "Add", new_cocktail_path %>
</div>
<div class="container bg">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-sm-6 col-lg-4 my-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
        <%= link_to c.name, cocktail_path(c) %> | <%= link_to 'Edit', edit_cocktail_path(c) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
